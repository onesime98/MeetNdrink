<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Cardview xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFF8E">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_nombar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombar"
        android:layout_toStartOf="@id/text_view_heure"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentLeft="false"
        android:layout_toLeftOf="@id/text_view_heure" />

    <TextView
        android:id="@+id/text_view_heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentRight="true" />

<TextView
    android:id="@+id/text_view_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="false"
    android:text="Date"
    android:layout_below="@id/text_view_nombar"/>


</RelativeLayout>

</android.support.v7.widget.Cardview>