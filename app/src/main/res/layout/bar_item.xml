<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/colorWhiteDirty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/textview_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nom du bar : "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_name"
            android:text="Description : "
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textview_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_description"
            android:text="Adresse :  "
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_numtel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_adresse"
            android:text="Numéro de téléphone: "
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_horaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_numtel"
            android:text="Horaire :  "
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_horaire"
            android:text="Classification : "
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="26dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_share" />

        <Button
            android:id="@+id/btn_event"
            android:layout_width="28dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/ic_event" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>